<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".SavedGamesEditGameActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:backgroundTint="#294155">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/background_popup"
                    android:scaleType="fitXY"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_alignTop="@+id/option_move_first_list"
                    android:layout_alignBottom="@id/option_move_first_list"
                    android:layout_alignLeft="@id/option_move_first_list"
                    android:layout_alignRight="@id/option_move_first_list" />

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/background_popup_header" />

                <LinearLayout
                    android:id="@+id/option_move_first_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="20dp">

                        <EditText
                            android:id="@+id/edit_game_name"
                            android:layout_width="0dip"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:textColorHint="#9FFF"
                            android:hint="@string/saved_games_game_name_placeholder"
                            android:layout_marginRight="20dp"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:background="@drawable/btn_green"
                            android:paddingTop="0dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="0dp"
                            android:paddingLeft="20dp"
                            android:text="@string/saved_games_edit_save"
                            android:textColor="#FFF"
                            android:layout_margin="0dp"
                            android:onClick="validateEdition"/>

                    </LinearLayout>

                    <GridView
                        android:id="@+id/edit_game_images_list"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:numColumns="3"
                        android:verticalSpacing="15dp"
                        android:horizontalSpacing="15dp"
                        android:stretchMode="columnWidth"
                        android:gravity="center"
                        android:layout_weight="1"
                        />

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/saved_game_edit_popup_ic" />

</RelativeLayout>