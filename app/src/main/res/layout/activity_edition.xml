<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditionActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">


        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="4"
            android:weightSum="1.0"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:orientation="horizontal"
                android:layout_weight="0.7"
                android:weightSum="1.0"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.45"
                    android:weightSum="1.0"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="0.75"
                        android:gravity="top"
                        android:orientation="vertical">

                        <RadioGroup
                            android:id="@+id/edition_type"
                            style="@style/OptionsRadioGroup"
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight="3"
                            android:orientation="vertical"
                            android:gravity="center">

                            <com.tambyy.fanoronaakalana.graphics.customview.SquaredFromWidthRadioButton
                                android:id="@+id/edition_black_pawn"
                                style="@style/EditionRadioButton"
                                android:layout_width="match_parent"
                                android:background="@drawable/edition_black_pawn"
                                android:checked="true"
                                android:layout_marginTop="0dp"
                                android:layout_marginRight="0dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="0dp"/>

                            <com.tambyy.fanoronaakalana.graphics.customview.SquaredFromWidthRadioButton
                                android:id="@+id/edition_white_pawn"
                                style="@style/EditionRadioButton"
                                android:layout_width="match_parent"
                                android:background="@drawable/edition_white_pawn"
                                android:layout_margin="0dp"
                                android:layout_marginRight="0dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="0dp"/>

                            <com.tambyy.fanoronaakalana.graphics.customview.SquaredFromWidthRadioButton
                                android:id="@+id/edition_trash"
                                style="@style/EditionRadioButton"
                                android:layout_width="match_parent"
                                android:background="@drawable/edition_trash_ic"
                                android:layout_marginTop="0dp"
                                android:layout_marginRight="0dp"
                                android:layout_marginLeft="0dp"/>

                        </RadioGroup>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="0.25"
                        android:gravity="bottom"
                        android:orientation="vertical">

                        <com.tambyy.fanoronaakalana.graphics.customview.SquaredFromWidthCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="15dp"
                            android:backgroundTint="#0000">

                            <ImageButton
                                android:id="@+id/edition_clear"
                                style="@style/LSGameButton"
                                android:padding="0dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/edition_clean_ic"
                                android:onClick="clearBoard"/>

                        </com.tambyy.fanoronaakalana.graphics.customview.SquaredFromWidthCardView>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_weight="16"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="25dp"
            android:backgroundTint="@color/transparent"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.tambyy.fanoronaakalana.graphics.customview.AkalanaView
                    android:id="@+id/edition_akalana"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </com.tambyy.fanoronaakalana.graphics.customview.AkalanaView>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="4"
            android:weightSum="1.0"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:orientation="horizontal"
                android:layout_weight="0.7"
                android:weightSum="1.0"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.45"
                    android:weightSum="3"
                    android:orientation="vertical"
                    android:gravity="center">

                    <com.tambyy.fanoronaakalana.graphics.customview.SquaredFromWidthCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        android:backgroundTint="#0000">

                        <ImageButton
                            style="@style/LSGameButton"
                            android:padding="0dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/edition_play"
                            android:src="@drawable/edition_play_ic"
                            android:onClick="launchOptionActivity"/>

                    </com.tambyy.fanoronaakalana.graphics.customview.SquaredFromWidthCardView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>