<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".SavedGamesEditFolderActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#294155"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_alignLeft="@id/setting_sound"
                    android:layout_alignTop="@+id/setting_sound"
                    android:layout_alignRight="@id/setting_sound"
                    android:layout_alignBottom="@id/setting_sound"
                    android:scaleType="centerCrop"
                    android:src="@drawable/background_popup" />

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:adjustViewBounds="true"
                    android:src="@drawable/background_popup_header" />

                <LinearLayout
                    android:id="@+id/setting_sound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="40dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="20dp">

                    <EditText
                        android:id="@+id/edit_folder_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/saved_games_edit_folder_name"
                        android:textColor="#FFF"
                        android:textColorHint="#9FFF"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:gravity="center">

                        <Button
                            android:id="@+id/setting_sound_save"
                            android:layout_width="match_parent"
                            android:layout_height="46dp"
                            android:background="@drawable/btn_green"
                            android:textColor="#FFF"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="@string/saved_games_edit_save"
                            android:onClick="validateEdition"/>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/saved_game_edit_popup_ic" />

</RelativeLayout>