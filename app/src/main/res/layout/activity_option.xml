<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OptionActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="14"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.tambyy.fanoronaakalana.graphics.customview.SquaredCardView
                        android:id="@+id/option_game_mode"
                        style="@style/OptionsItem"
                        android:onClick="launchOptionGameModeActivity">

                        <LinearLayout
                            style="@style/OptionsLayout">

                            <ImageView
                                android:layout_width="fill_parent"
                                android:layout_height="0dip"
                                android:layout_weight="1"
                                android:src="@drawable/option_game_mode_ic" />

                            <TextView
                                style="@style/OptionsItemTitle"
                                android:text="@string/game_option_mode" />

                            <TextView
                                android:id="@+id/option_game_mode_text"
                                style="@style/OptionsItemValue"
                                android:text="@string/game_option_mode_riatra" />

                        </LinearLayout>

                    </com.tambyy.fanoronaakalana.graphics.customview.SquaredCardView>

                    <com.tambyy.fanoronaakalana.graphics.customview.SquaredCardView
                        android:id="@+id/option_first_move"
                        style="@style/OptionsItem"
                        android:onClick="launchOptionFirstMoveActivity">

                        <LinearLayout
                            style="@style/OptionsLayout">

                            <ImageView
                                android:layout_width="fill_parent"
                                android:layout_height="0dip"
                                android:layout_weight="1"
                                android:src="@drawable/option_first_move_ic" />

                            <TextView
                                style="@style/OptionsItemTitle"
                                android:text="@string/game_option_move_first" />

                            <TextView
                                android:id="@+id/option_first_move_text"
                                style="@style/OptionsItemValue"
                                android:text="@string/game_option_move_first_black" />

                        </LinearLayout>

                    </com.tambyy.fanoronaakalana.graphics.customview.SquaredCardView>

                    <com.tambyy.fanoronaakalana.graphics.customview.SquaredCardView
                        style="@style/OptionsItem"
                        android:onClick="launchOptionPlayAgainstActivity">

                        <LinearLayout
                            style="@style/OptionsLayout">

                            <ImageView
                                android:layout_width="fill_parent"
                                android:layout_height="0dip"
                                android:layout_weight="1"
                                android:src="@drawable/option_play_against_ic" />

                            <TextView
                                style="@style/OptionsItemTitle"
                                android:text="@string/game_option_against" />

                            <TextView
                                android:id="@+id/option_play_against_text"
                                style="@style/OptionsItemValue"
                                android:text="@string/game_option_against_human" />

                        </LinearLayout>

                    </com.tambyy.fanoronaakalana.graphics.customview.SquaredCardView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/option_ai"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.tambyy.fanoronaakalana.graphics.customview.SquaredCardView
                        android:id="@+id/option_ai_level"
                        style="@style/OptionsItem"
                        android:onClick="launchOptionAiLevelActivity">

                        <LinearLayout
                            style="@style/OptionsAiLayout">

                            <ImageView
                                android:layout_width="fill_parent"
                                android:layout_height="0dip"
                                android:layout_weight="1"
                                android:src="@drawable/option_ai_level_ic" />

                            <TextView
                                style="@style/OptionsItemTitle"
                                android:text="@string/game_option_ai_level" />

                            <TextView
                                android:id="@+id/option_ai_level_text"
                                style="@style/OptionsItemValue"
                                android:text="8" />

                        </LinearLayout>

                    </com.tambyy.fanoronaakalana.graphics.customview.SquaredCardView>

                    <com.tambyy.fanoronaakalana.graphics.customview.SquaredCardView
                        android:id="@+id/option_ai_max_reflexion_time"
                        style="@style/OptionsItem"
                        android:onClick="launchOptionAiMaxSearchTimeActivity">

                        <LinearLayout
                            style="@style/OptionsAiLayout">

                            <ImageView
                                android:layout_width="fill_parent"
                                android:layout_height="0dip"
                                android:layout_weight="1"
                                android:src="@drawable/option_ai_max_reflexion_time_ic" />

                            <TextView
                                style="@style/OptionsItemTitle"
                                android:text="@string/game_option_ai_max_time_eval" />

                            <TextView
                                android:id="@+id/option_ai_max_relexion_time_text"
                                style="@style/OptionsItemValue"
                                android:text="10s" />

                        </LinearLayout>

                    </com.tambyy.fanoronaakalana.graphics.customview.SquaredCardView>

                    <com.tambyy.fanoronaakalana.graphics.customview.SquaredCardView
                        android:id="@+id/option_ai_ponder"
                        style="@style/OptionsItem"
                        android:onClick="launchOptionAiPonderActivity">

                        <LinearLayout
                            style="@style/OptionsAiLayout">

                            <ImageView
                                android:layout_width="fill_parent"
                                android:layout_height="0dip"
                                android:layout_weight="1"
                                android:src="@drawable/option_ai_ponder_ic" />

                            <TextView
                                style="@style/OptionsItemTitle"
                                android:text="@string/game_option_ai_ponder" />

                            <TextView
                                android:id="@+id/option_ai_ponder_text"
                                style="@style/OptionsItemValue"
                                android:text="@string/game_option_ai_ponder_yes" />

                        </LinearLayout>

                    </com.tambyy.fanoronaakalana.graphics.customview.SquaredCardView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="3"
                android:gravity="center|bottom"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/game_option_play"
                    style="@style/OptionsBtn"
                    android:background="@drawable/btn_green"
                    android:onClick="launchGameActivity"
                    android:text="@string/game_option_play" />

                <Button
                    android:id="@+id/game_option_resume"
                    style="@style/OptionsBtn"
                    android:background="@drawable/btn_blue"
                    android:onClick="resumeGameActivity"
                    android:text="@string/game_option_resume"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/game_option_re_edit"
                    style="@style/OptionsBtn"
                    android:background="@drawable/btn_orange"
                    android:onClick="resumeEditionActivity"
                    android:text="@string/game_option_re_edit"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>