<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SavedGamesActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="8"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:gravity="left|center">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/saved_games_folders_breadcrumb"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="#0000"/>

            <ImageButton
                android:id="@+id/saved_games_bt_send"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:background="@color/transparent"
                android:scaleType="fitCenter"
                android:padding="5dp"
                android:src="@drawable/saved_game_bt_send_ic"
                android:onClick="bluetoothSelectDevice"/>

            <ImageButton
                android:id="@+id/saved_games_bt_receive"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:background="@color/transparent"
                android:scaleType="fitCenter"
                android:padding="5dp"
                android:src="@drawable/saved_game_bt_receive_ic"
                android:onClick="bluetoothPrepareReceivingData"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="7"
            android:weightSum="40"
            android:paddingLeft="13dp"
            android:gravity="right">

            <TextView
                android:id="@+id/saved_games_folders_list_empty_text"
                android:visibility="gone"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:gravity="center"
                android:text="@string/saved_games_no_folder"
                android:textColor="#777"
                android:textSize="16dp"
                android:textStyle="bold"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"/>

            <GridView
                android:id="@+id/saved_games_folders_list"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:numColumns="1"
                android:verticalSpacing="@dimen/saved_games_grid_view_folder_vspacing"
                android:stretchMode="columnWidth"
                android:paddingLeft="@dimen/saved_games_grid_view_padding_left_right"
                android:paddingRight="@dimen/saved_games_grid_view_padding_left_right"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/saved_games_list_empty_text"
                android:visibility="gone"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="26"
                android:gravity="center"
                android:text="@string/saved_games_no_game"
                android:textColor="#777"
                android:textSize="16dp"
                android:textStyle="bold"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"/>

            <GridView
                android:id="@+id/saved_games_list"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="26"
                android:numColumns="3"
                android:verticalSpacing="@dimen/saved_games_grid_view_vspacing"
                android:horizontalSpacing="@dimen/saved_games_grid_view_hspacing"
                android:stretchMode="columnWidth"
                android:paddingLeft="@dimen/saved_games_grid_view_padding_left_right"
                android:paddingRight="@dimen/saved_games_grid_view_padding_left_right"
                android:gravity="center"
                />

            <ScrollView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:gravity="center|top">

                    <LinearLayout
                        android:id="@+id/saved_games_options"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="@dimen/saved_games_menu_weight"
                        android:gravity="top"
                        android:orientation="vertical">

                        <LinearLayout
                            style="@style/SavedGameButtonLayout"
                            android:onClick="createFolder">

                            <ImageView
                                style="@style/SavedGameButton"
                                android:src="@drawable/saved_game_create_folder_ic" />

                            <TextView
                                style="@style/SavedGameButtonText"
                                android:text="@string/saved_games_new_folder" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/saved_games_send_bt"
                            style="@style/SavedGameButtonLayout"
                            android:onClick="bluetoothSendData"
                            android:visibility="gone">

                            <ImageView
                                style="@style/SavedGameButton"
                                android:src="@drawable/saved_game_send_bt_ic" />

                            <TextView
                                style="@style/SavedGameButtonText"
                                android:text="@string/saved_games_transfer" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/saved_games_move_items"
                            style="@style/SavedGameButtonLayout"
                            android:onClick="movingSelectedItems"
                            android:visibility="gone">

                            <ImageView
                                style="@style/SavedGameButton"
                                android:src="@drawable/saved_game_move_items_ic" />

                            <TextView
                                style="@style/SavedGameButtonText"
                                android:text="@string/saved_games_move_items" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/saved_games_move_items_validate"
                            style="@style/SavedGameButtonLayout"
                            android:onClick="moveSelectedItems"
                            android:visibility="gone">

                            <ImageView
                                style="@style/SavedGameButton"
                                android:src="@drawable/saved_game_move_items_ic" />

                            <TextView
                                style="@style/SavedGameButtonText"
                                android:text="@string/saved_games_move_items_here" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/saved_games_cancel"
                            style="@style/SavedGameButtonLayout"
                            android:onClick="movingSelectedItemsCancel"
                            android:visibility="gone">

                            <ImageView
                                style="@style/SavedGameButton"
                                android:src="@drawable/saved_game_cancel_ic" />

                            <TextView
                                style="@style/SavedGameButtonText"
                                android:text="@string/saved_games_cancel" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/saved_games_remove_items"
                            style="@style/SavedGameButtonLayout"
                            android:onClick="removeSelectedItems"
                            android:visibility="gone">

                            <ImageView
                                style="@style/SavedGameButton"
                                android:src="@drawable/saved_game_remove_items_ic" />

                            <TextView
                                style="@style/SavedGameButtonText"
                                android:text="@string/saved_games_remove" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/saved_games_rename_item"
                            style="@style/SavedGameButtonLayout"
                            android:onClick="editGame"
                            android:visibility="gone">

                            <ImageView
                                style="@style/SavedGameButton"
                                android:src="@drawable/saved_game_edit_ic" />

                            <TextView
                                style="@style/SavedGameButtonText"
                                android:text="@string/saved_games_edit" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/saved_games_save_game"
                            style="@style/SavedGameButtonLayout"
                            android:onClick="createGame"
                            android:visibility="gone">

                            <ImageView
                                style="@style/SavedGameButton"
                                android:src="@drawable/saved_game_save_ic" />

                            <TextView
                                style="@style/SavedGameButtonText"
                                android:text="@string/saved_games_save_here" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/saved_games_continue_game"
                            style="@style/SavedGameButtonLayout"
                            android:onClick="launchOptionActivity"
                            android:visibility="gone">

                            <ImageView
                                style="@style/SavedGameButton"
                                android:src="@drawable/saved_game_continue_game_ic" />

                            <TextView
                                style="@style/SavedGameButtonText"
                                android:text="@string/saved_games_continue_game" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>