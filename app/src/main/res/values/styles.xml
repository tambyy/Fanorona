<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">#1E1B19</item>
    </style>

    <!-- Home -->

    <style name="HomeButton" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:weightSum">10</item>
    </style>

    <style name="HomeButtonImage" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dip</item>
        <item name="android:layout_weight">6</item>
    </style>

    <style name="HomeButtonText" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dip</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_weight">4</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#AFFF</item>
        <item name="android:textSize">@dimen/home_menu_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Options -->

    <style name="OptionsItem" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="cardElevation">0dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginLeft">@dimen/option_item_margin_left_right</item>
        <item name="android:layout_marginTop">@dimen/option_item_margin_top_bottom</item>
        <item name="android:layout_marginRight">@dimen/option_item_margin_left_right</item>
        <item name="android:layout_marginBottom">@dimen/option_item_margin_top_bottom</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">#0000</item>
        <item name="cardBackgroundColor">@color/transparent</item>
    </style>

    <style name="OptionsLayout" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/option_item_padding</item>
    </style>

    <style name="OptionsAiLayout" parent="OptionsLayout">
        <item name="android:background">@drawable/option_item_ai_bg</item>
    </style>

    <style name="OptionsItemTitle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">@dimen/option_item_title_margin_top</item>
        <item name="android:textColor">#BFFF</item>
        <item name="android:textSize">@dimen/option_title_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="OptionsItemValue" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/option_value_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">2dp</item>
    </style>

    <style name="OptionsBtn" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/option_btn_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">7dp</item>
        <item name="android:layout_marginRight">7dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textSize">@dimen/option_btn_text_size</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="PopupContainer" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/popup_icon_padding_top</item>
    </style>

    <style name="PopupBodyContainer" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/popup_corner_radius</item>
        <item name="android:backgroundTint">#294155</item>
    </style>

    <style name="PopupBg" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:src">@drawable/background_popup</item>
    </style>

    <style name="PopupHeaderImage" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">@dimen/popup_icon_image_size</item>
        <item name="android:layout_height">@dimen/popup_icon_image_size</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="PopupHeader" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">@dimen/popup_header_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:src">@drawable/background_popup_header</item>
    </style>

    <style name="PopupBody" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/popup_padding</item>
        <item name="android:paddingTop">@dimen/popup_padding_top</item>
        <item name="android:paddingRight">@dimen/popup_padding</item>
        <item name="android:paddingBottom">@dimen/popup_padding</item>
    </style>

    <style name="PopupItemTitle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/popup_item_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/popup_item_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="OptionsPopupItemContainer" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="SettingItemContainer" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="cardBackgroundColor">@color/transparent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="OptionsPopupItemContainerLayout" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/popup_game_mode_item_margin</item>
        <item name="android:layout_marginTop">@dimen/popup_game_mode_item_margin</item>
        <item name="android:layout_marginRight">@dimen/popup_game_mode_item_margin</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="OptionsPopupItemImage" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
    </style>


    <!-- Game -->

    <style name="LSGameButton" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">3dp</item>
    </style>


    <!-- Edition -->

    <!-- Options radio group -->
    <style name="OptionsRadioGroup" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="EditionRadioButton" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:padding">3dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>


    <!-- Saved game -->

    <style name="SavedGameButtonLayout" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/saved_games_menu_margin_bottom</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SavedGameButton" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="SavedGameButtonText" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/saved_games_menu_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>


    <!-- Review -->

    <style name="ReviewProgressBar" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:max">@integer/progress_max_value</item>
    </style>

</resources>