<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">


        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="4"
            android:weightSum="1.0"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:orientation="horizontal"
                android:layout_weight="0.7"
                android:weightSum="1.0"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.45"
                    android:weightSum="1.0"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="0.4"
                        android:gravity="top"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.tambyy.fanoronaakalana.graphics.customview.SquaredFromWidthCardView
                                android:id="@+id/game_play_agaisnt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#A4CA39"
                                app:cardCornerRadius="15dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/game_play_against_ai_white_ic" />

                            </com.tambyy.fanoronaakalana.graphics.customview.SquaredFromWidthCardView>

                            <com.tambyy.fanoronaakalana.graphics.customview.SquaredFromWidthCardView
                                android:layout_width="24dp"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@+id/game_play_agaisnt"
                                android:layout_alignRight="@+id/game_play_agaisnt"
                                android:layout_marginTop="3dp"
                                android:layout_marginRight="3dp"
                                android:backgroundTint="#89A049"
                                app:cardCornerRadius="12dp">

                                <TextView
                                    android:id="@+id/game_ai_level_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textSize="15sp"
                                    android:text="10"
                                    android:textStyle="bold"
                                    android:textColor="#FFF"
                                    android:gravity="center"/>

                            </com.tambyy.fanoronaakalana.graphics.customview.SquaredFromWidthCardView>

                        </RelativeLayout>

                        <ProgressBar
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:id="@+id/game_ai_thinking_progress"
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:layout_marginTop="5dp"
                            android:max="20"
                            android:progress="20"
                            ></ProgressBar>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="0.6"
                        android:gravity="bottom"
                        android:orientation="vertical">

                        <com.tambyy.fanoronaakalana.graphics.customview.SquaredFromWidthCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            app:cardCornerRadius="15dp"
                            android:backgroundTint="#3FFF">

                            <ImageButton
                                style="@style/LSGameButton"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/game_save"
                                android:src="@drawable/game_save_ic"
                                android:onClick="launchSavedGamesActivity"/>

                        </com.tambyy.fanoronaakalana.graphics.customview.SquaredFromWidthCardView>

                        <com.tambyy.fanoronaakalana.graphics.customview.SquaredFromWidthCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="15dp"
                            android:backgroundTint="#3FFF">

                            <ImageButton
                                style="@style/LSGameButton"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/game_replay"
                                android:src="@drawable/game_replay_ic"
                                android:onClick="replay"/>

                        </com.tambyy.fanoronaakalana.graphics.customview.SquaredFromWidthCardView>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_weight="16"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="25dp"
            android:backgroundTint="@color/transparent"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.tambyy.fanoronaakalana.graphics.customview.AkalanaView
                    android:id="@+id/game_akalana"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </com.tambyy.fanoronaakalana.graphics.customview.AkalanaView>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="4"
            android:weightSum="1.0"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:orientation="horizontal"
                android:layout_weight="0.7"
                android:weightSum="1.0"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.45"
                    android:weightSum="3"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.tambyy.fanoronaakalana.graphics.customview.SquaredFromWidthCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="15dp"
                            android:backgroundTint="#0000">

                            <ImageButton
                                style="@style/LSGameButton"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/game_history_next"
                                android:src="@drawable/game_history_next_ic"
                                android:onClick="nextHistory"/>

                        </com.tambyy.fanoronaakalana.graphics.customview.SquaredFromWidthCardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.tambyy.fanoronaakalana.graphics.customview.SquaredFromWidthCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="15dp"
                            android:backgroundTint="#0000">

                            <ImageButton
                                style="@style/LSGameButton"
                                android:padding="0dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/game_stop_moves_sequence"
                                android:src="@drawable/game_stop_move_ic"
                                android:onClick="stopMovesSequence"/>

                        </com.tambyy.fanoronaakalana.graphics.customview.SquaredFromWidthCardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.tambyy.fanoronaakalana.graphics.customview.SquaredFromWidthCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="15dp"
                            android:backgroundTint="#0000">

                            <ImageButton
                                style="@style/LSGameButton"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/game_history_prev"
                                android:src="@drawable/game_history_prev_ic"
                                android:onClick="prevHistory"/>

                        </com.tambyy.fanoronaakalana.graphics.customview.SquaredFromWidthCardView>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>