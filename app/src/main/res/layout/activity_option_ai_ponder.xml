<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".OptionAiPonderActivity">

    <RelativeLayout
        style="@style/PopupContainer">

        <androidx.cardview.widget.CardView
            style="@style/PopupBodyContainer">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    style="@style/PopupBg"
                    android:layout_alignTop="@+id/option_ponder_list"
                    android:layout_alignBottom="@id/option_ponder_list"
                    android:layout_alignLeft="@id/option_ponder_list"
                    android:layout_alignRight="@id/option_ponder_list" />

                <ImageView style="@style/PopupHeader"/>

                <LinearLayout
                    android:id="@+id/option_ponder_list"
                    style="@style/PopupBody"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/option_ai_ponder_yes"
                        style="@style/OptionsPopupItemContainer"
                        android:onClick="setAiPonderYes">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="0dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:src="@drawable/option_ai_ponder_yes_ic" />

                            <TextView
                                style="@style/PopupItemTitle"
                                android:text="@string/game_option_ai_ponder_yes"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/option_ai_ponder_no"
                        style="@style/OptionsPopupItemContainer"
                        android:onClick="setAiPonderNo">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="0dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:src="@drawable/option_ai_ponder_no_ic" />

                            <TextView
                                style="@style/PopupItemTitle"
                                android:text="@string/game_option_ai_ponder_no" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <ImageView
        style="@style/PopupHeaderImage"
        android:src="@drawable/option_ai_ponder_popup_ic" />

</RelativeLayout>