<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingTop="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="7dp"
    tools:context=".EditGameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:height="40dp"
            android:gravity="left|center"
            android:text="Modifier"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/edit_game_validate"
            android:padding="10dp"
            android:onClick="validateEdition"/>

    </LinearLayout>

    <EditText
        android:id="@+id/edit_game_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:hint="Nom de la partie"/>

    <TextView
        android:id="@+id/saved_games_folders_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:text="Choisir une image de prÃ©sentation"
        android:textSize="15sp"
        android:gravity="center"/>

    <GridView
        android:id="@+id/edit_game_images_list"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:numColumns="2"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="7dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:layout_weight="1"
        />

</LinearLayout>